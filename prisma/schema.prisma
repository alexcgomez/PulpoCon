generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Profile {
  id        String   @id @default(cuid())
  full_name String
  email     String   @unique
  cv_id     String?  @unique
  
  cv                    CV?
  looperRecommendations LooperRecommendation[]

  @@map("profiles")
}

model CV {
  id         String   @id @default(cuid())
  file_path  String
  
  profile Profile? @relation(fields: [id], references: [cv_id])

  @@map("cv")
}

model Looper {
  id          String   @id @default(cuid())
  full_name   String
  email       String   @unique
  description String
  
  looperRecommendations LooperRecommendation[] @relation("LooperRecommendations")

  @@map("loopers")
}

model LooperRecommendation {
  id           String   @id @default(cuid())
  profile_id   String
  looper_ids   String[]
  text         String
  
  profile Profile @relation(fields: [profile_id], references: [id], onDelete: Cascade)
  loopers Looper[] @relation("LooperRecommendations")

  @@map("looper_recommendations")
}